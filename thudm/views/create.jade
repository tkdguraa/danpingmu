    // Light Bootstrap Table DEMO methods, don't include it in your project!
    script.
      var ColorList = new Array();
      for(var i = 0; i < 10; i++)
        ColorList[i] = 0;
      $(function(){
        $('div.ColorBox').click(function(){
          var IdNum;
          IdNum = $(this).attr('id');
          $('#show').css('color',$('#C' +IdNum).css('background-color'));
          if(ColorList[IdNum] == 0){
            ColorList[IdNum] = 1;
            $('#C' + IdNum).css('border','2px solid #a40000');
          }
          else{
            ColorList[IdNum] = 0;
            $('#C' + IdNum).css('border','none');
          }
        });
      })
      $('#bg_image').on('change',function(){
          var filePath = $(this).val();
          var formData = new FormData(filePath);
          $.ajax({
              url:'/activity',
              type:'post',
              data: formData,
              dataType: 'json',
              async: false,
              cache: false,
              contentType: false,
              processData: false,
              success: function(data){        
              },
              error: function(data){
              }
          });
          $('#bg').css('background-image','url(' + filePath + ')');
      })

      $(function(){
        $('#create').click(function(){
          var ActBackground = $('#bg_image').val();
          var ActTitle = $('#Title').val();
          var ActSubTitle = $('#SubTitle').val(); 
          var ColorNum = 0;
          var ColorSelected = new Array();
          if(ActTitle == "" || ActSubTitle == "" ||ActBackground == ""){
            alert("输入栏不能有空!");
            //return;
          }
          for(var i = 0; i < 10; i++){
            if(ColorList[i] == 1){
              ColorSelected.push($('#C' + i).css('background-color'));
              ColorNum++;
            }
          }
          console.log(ActTitle,ActSubTitle,ActBackground);
          ColorSelected = JSON.stringify(ColorSelected);
          $.ajax({
            type:"post",
            data:{"title": ActTitle,"sub_title": ActSubTitle,"bullet_color_num": ColorNum,"bullet_colors": ColorSelected},
            datatype:"json",
            url:"/activity",
            success: function(data){
               window.location = '/activity/list'; 
            },
            error: function(data){
               alert("创建失败，请重试!");          
            }
          })
        })
      })

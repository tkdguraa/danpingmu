extends ../layout.jade
block contents
        #M3.content
          .container-fluid
            .row
              .col-md-4
                .card
                  .header
                    h4.title 创建抽奖
                  .content
                      .row
                        .col-md-5
                          .form-group
                            label 抽奖主题
                            input.form-control(type='text' id='title')
                      .row
                        .col-md-9
                          .form-group
                            label 抽奖说明
                            input.form-control(type='text' id='subtitle')
                      .row
                        .col-md-3
                          .form-group
                            label 中奖人数
                            input.form-control(type='text' id='winnernum')

                      button.btn.btn-info.btn-fill(type='submit' id='create') 创建
                      .clearfix
   
block script
    script(src='/assets/js/jquery.3.2.1.min.js', type='text/javascript')
    script(src='/assets/js/bootstrap.min.js', type='text/javascript')
    // Charts Plugin
    script(src='/assets/js/chartist.min.js')
    // Notifications Plugin
    script(src='/assets/js/bootstrap-notify.js')
    // Light Bootstrap Table Core javascript and methods for Demo purpose
    script(src='/assets/js/light-bootstrap-dashboard.js?v=1.4.0')
    script.
        $(document).ready(function(){
            $('#M' + $('.content').attr('id')).attr('class','active');
        })
        $(document).on('click','#create',function(){
            var title = $('#title').val();
            var subtitle = $('#subtitle').val();
            var winnernum = $('#winnernum').val();
            $.ajax({
               url:'/lottery',
               type:'post',
               data: {'title': title,'sub_title': subtitle,'winner_num':winnernum},
               datatype:"json",
               success: function(data){
                 window.location = '/lottery/list';
               },
               error: function(data){
                 alert("创建失败，请重试!");
               }
            })
        });
    
    style.
      div.Candidates{
      position:relative;
      float:left;
      width:50%;
      height:60px;
      }
      div.AllCandy{
      position:relative;
      width:100%;
      height:40px;
      }
      div.Profile{
      position:relative;
      float:left;
      width:60px;
      height:60px;
      background-size:100% 100%;
      background-repeat:no-repeat;
      }
      div.Name{
      position:relative;
      float:left;
      top:50%;
      width:auto;
      height:60px;
      }
      div.CandyArray{
      position:relative;
      height:60px;
      width:100%;
      }
      div.del{
      position:relative;
      z-index:1;
      }

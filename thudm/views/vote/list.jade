block script
    script(src='/assets/js/jquery.3.2.1.min.js', type='text/javascript')
    script(src='/assets/js/bootstrap.min.js', type='text/javascript')
    // Charts Plugin
    // Notifications Plugin
    script(src='/assets/js/bootstrap-notify.js')
    // Light Bootstrap Table Core javascript and methods for Demo purpose
    script(src='/assets/js/light-bootstrap-dashboard.js?v=1.4.0')
    // Light Bootstrap Table DEMO methods, don't include it in your project!
    script(type='text/javascript').
     var activities = !{items != null? JSON.stringify(items): 'null'}; 
     $(document).ready(function(){
        var cnt = 0;
        console.log(activities);
        $('#M' + $('.content').attr('id')).attr('class','active');
        activities.forEach((act) =>{
          $('tbody').append("<tr id=tr" + cnt + "></tr>");
          $('#tr' + cnt).append($("<td>").text(cnt));
          $('#tr' + cnt).append("<td><a href=" + act._id + ">" + act.title + "</a></td>");
          $('#tr' + cnt).append($("<td>").text(act.sub_title));
          $('#tr' + cnt).append($("<td id = td" + cnt + '>').text(act.status));
          $('#tr' + cnt).append("<td id = btn" + cnt + "><button class='start btn btn-success btn-fill' id=" + cnt + ">开始</button></td>");
          
          console.log(act._id);
          if(act.status == 'ONGOING')
              $('#td' + cnt).css({'color':'green'});
          else if(act.status == 'READY')
              $('#td' + cnt).css({'color':'orange'});
           else
              $('#td' + cnt).css({'color':'red'});
          cnt++;
        }); 
      });
      $(document).on('click','.start',function(){
         $.ajax({
           url: '/' + activities[this.id]._id + '/start',
           type: 'post',
           data: {'msg': 'start'},
           datatype: 'json',
           success: function(data){
             $('#btn' + this.id).remove();
             $('#tr' + this.id).append('<td id = btn' + this.id + "><button class='display btn btn-info btn-fill' id=dis" + this.id + ">显示</button>&nbsp&nbsp&nbsp<button class='stop btn btn-danger btn-fill' id=" + this.id + '>结束</button></td>');
             $('#td' + this.id).text('ONGOING');
           },
           error:function(data){
           
           }
         })
      });
      $(document).on('click','.display',function(){
         $('#btn' + this.id).remove();
         $('#tr' + this.id).append('<td id = btn' + this.id + "><button class='back btn btn-warning btn-fill' id=back" + this.id + ">返回</button>&nbsp&nbsp&nbsp<button class='stop btn btn-danger btn-fill' id=" + this.id + '>结束</button></td>');
         activities[this.id].type = 'vote';
         socket.emit('displayVote', activities[this.id]); 
      });
      $(document).on('click', '.back',function(){
         socket.emit('quitVote', activities[this.id]);
         $('#tr' + this.id).append('<td id = btn' + this.id + "><button class='display btn btn-info btn-fill' id=dis" + this.id + ">返回</button>&nbsp&nbsp&nbsp<button class='stop btn btn-danger btn-fill' id=" + this.id + '>结束</button></td>');
      });
      $(document).on('click','#make',function(){
         window.location = '/vote/create';
      })




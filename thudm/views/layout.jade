    link(href='/assets/css/pe-icon-7-stroke.css', rel='stylesheet')
    link(href='/assets/css/font-awesome.css', rel='stylesheet')
    script(src='/js/ajax.js')

  body
    .wrapper
      .sidebar(data-color='purple', data-image='/assets/img/eye.jpg')
        //
        .sidebar-wrapper
          .logo
            .simple-text
              a(href='/' style="color:white")
                弹屏目
          ul.nav
            li#MM5
              a(href='/activity/detail')
                i.fa.fa-cogs(style="position:relative;top:0.4vh;")
                h5 活动设置
            li#MM1
              a(href='/msglist')
                i.fa.fa-list-alt(style="position:relative;top:0.4vh;")
                h5 弹幕审核
            li#MM2
              a(href='/vote/list')
                i.fa.fa-inbox(style="position:relative;top:0.4vh;")
                h5 投票
            li#MM3
              a(href='/lottery/list')
                i.fa.fa-gift(style="position:relative;top:0.4vh;")
                h5 抽奖
            li#MM4
              a(href='/blacklist')
                i.fa.fa-user-times(style="position:relative;top:0.2vh;")
                h5 黑名单/过滤词
            li
              a(href='/screen',target="_blank")
                i.fa.fa-comments(style="position:relative;top:0.2vh;")
                h5 弹幕墙
            li
              a(href='/ticket',target="_blank")
                i.fa.fa-qrcode(style="position:relative;top:0.6vh;")
                h5 QRCODE
            div(style="position:absolute; top:90vh; width:10vw") 
              a(href='/activity/list' style='color:white')
               i.fa.fa-home 
               h5 返回列表

      .main-panel
        nav.navbar.navbar-default.navbar-fixed
          .container-fluid
            .collapse.navbar-collapse
              ul.nav.navbar-nav.navbar-right
                li
                  a(href='/')
                    p Home
                li
                  a(href='javascript:void(0)' id='logout')
                    p Log out
                li.separator.hidden-lg.hidden-md
        
        
        block contents

    block script
    script.
      $(document).on('click','#logout',function(){
        $.ajax({
          url: '/auth/logout',
          type: 'post',
          data: {'cmd': 'logout'},
          datatype: 'json',
          success:function(data){
            alert("成功登出！");
            window.location = '/';
          },
          error:function(data){
            alert("您已登出");
          }
        })
      }); 

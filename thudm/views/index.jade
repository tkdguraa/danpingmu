          $('#iflogin').append('<a style="font-size:15px;color:blue" href=/activity/list>' + id.admin_id + '&nbsp&nbsp&nbsp&nbsp</a>');
          $('#log').text('登出');
          $('#log').attr('href','/');
        }
      });
      $(document).on('click', '#log', function(){
        $.ajax({
          url: '/auth/logout',
          type: 'post',
          data: {'cmd': 'logout'},
          datatype: 'json',
          success:function(data){
            alert("成功登出！");
          },
          error:function(data){
            alert("您已登出");
          }
        })
      });


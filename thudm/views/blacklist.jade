          $('#CandyArray0').append('<div class = Candidates id = Candy'+ CandyNum +'></div>');
          $('#Candy' + CandyNum).append('<div class = Profile id = pic' + CandyNum + '></div>');
          $('#pic' + CandyNum).css("background-image","url(" + Profile +")");

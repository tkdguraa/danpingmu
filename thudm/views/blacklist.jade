        $('#AddCandy').click(function(){
          var Name = "Anonymous";
          var Profile = "/assets/img/faces/face-0.jpg";
          if($('#GetName').val() != '' )
            Name = $('#GetName').val();
          if($('#GetProfile').val() != undefined )

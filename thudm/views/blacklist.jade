      });
    
    style.
      div.Candidates{
      position:relative;
      float:left;
      width:50%;
      height:60px;
      }
      div.AllCandy{
      position:relative;
      width:100%;
      height:40px;
      }
      div.Profile{
      position:relative;
      float:left;
      width:60px;
      height:60px;
      background-size:100% 100%;
      background-repeat:no-repeat;
      }
      div.Name{
      position:relative;
      float:left;
      top:50%;
      width:auto;
      height:60px;
      }
      div.CandyArray{
      position:relative;
      height:60px;
      width:100%;
      }
      div.del{

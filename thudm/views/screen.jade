          function reset_pic(){ 
            if(fadeflag == 5){
              $('img.picture').fadeOut(500);
              fadeflag = 0;
              picflag = 0;
            }
            else if(fadeflag == 1 && picflag == 0){
              $('img.picture').fadeIn(500);
              picflag = 1;
              fadeflag++;

        var id = 1;
        var id2 = 1;
        var del = 1;
        $(document).ready(function(){
          $('body').css('background-image','url(' + activity.bg_img_url + ')');
          function delete_DM(){
            if (id - del > 15){
                $("#"+del).remove();
                $("#img"+del).remove();
                $("#name"+del).remove();
                del++;
            }
          }
          function show(){
            if(dm_list.size() > 0){
